{
    "appenders": {
      "access": {
        "type": "dateFile",
        "filename": "logs/access.log",
        "pattern": "-yyyy-MM-dd",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "app": {
        "type": "file",
        "filename": "logs/app.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "errorFile": {
        "type": "file",
        "filename": "logs/errors.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "console": {
        "type": "console"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      }
    },
    "categories": {
      "default": { "appenders": [ "app", "errors","console" ], "level": "INFO" },
      "http": { "appenders": [ "access","app", "errors","console"], "level": "INFO" }
    }
  }
  