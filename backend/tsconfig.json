{
    "compilerOptions": {
      "allowJs": true,
      "target": "es6",
      "module": "commonjs",
      "charset": "utf-8",
      "downlevelIteration": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "declaration": false,
      "removeComments": true,
      "sourceMap": true,
      "noLib": false,
      "outDir": "dist",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  